    <!-- Back to Top Button -->
    <button id="back-to-top" class="fixed bottom-6 right-6 bg-blue-600 text-white p-3 rounded-full shadow-lg hover:bg-blue-700 transition hidden">
        <i class="fas fa-arrow-up"></i>
    </button>

    <script>
        // Quiz Data
        const quizData = [
            {
                question: "Qual é a principal causa de acidentes de trânsito no Brasil?",
                options: [
                    "Falta de sinalização",
                    "Excesso de velocidade",
                    "Falta de manutenção dos veículos",
                    "Condições climáticas"
                ],
                correct: 1,
                explanation: "O excesso de velocidade é a principal causa de acidentes, pois reduz o tempo de reação do motorista e aumenta a gravidade dos acidentes."
            },
            {
                question: "Qual a distância mínima recomendada entre veículos em movimento?",
                options: [
                    "2 segundos",
                    "5 segundos",
                    "10 segundos",
                    "Não há recomendação"
                ],
                correct: 0,
                explanation: "A regra dos 2 segundos é a distância mínima segura. Em condições adversas, deve ser aumentada."
            },
            {
                question: "O que fazer ao se deparar com um acidente de trânsito?",
                options: [
                    "Parar imediatamente para ajudar",
                    "Sinalizar o local e chamar socorro",
                    "Tirar fotos para compartilhar",
                    "Continuar dirigindo para não atrapalhar"
                ],
                correct: 1,
                explanation: "É importante sinalizar o local para evitar novos acidentes e acionar os serviços de emergência (193 ou 192)."
            },
            {
                question: "Qual a porcentagem de acidentes que poderiam ser evitados com medidas simples?",
                options: [
                    "30%",
                    "50%",
                    "70%",
                    "90%"
                ],
                correct: 3,
                explanation: "Estudos mostram que 90% dos acidentes são causados por falhas humanas e poderiam ser evitados com comportamentos mais seguros."
            },
            {
                question: "Qual desses itens NÃO deve ser verificado antes de uma viagem longa?",
                options: [
                    "Nível de óleo do motor",
                    "Pressão dos pneus",
                    "Cor do veículo",
                    "Funcionamento dos faróis"
                ],
                correct: 2,
                explanation: "A cor do veículo não interfere na segurança. Óleo, pneus e faróis são itens essenciais para verificar antes de viajar."
            }
        ];

        // Quiz Variables
        let currentQuestion = 0;
        let score = 0;
        let quizStarted = false;

        // DOM Elements
        const quizIntro = document.getElementById('quiz-intro');
        const quizQuestions = document.getElementById('quiz-questions');
        const quizResults = document.getElementById('quiz-results');
        const startQuizBtn = document.getElementById('start-quiz');
        const nextBtn = document.getElementById('next-btn');
        const restartQuizBtn = document.getElementById('restart-quiz');
        const questionElement = document.getElementById('question');
        const optionsElement = document.getElementById('options');
        const feedbackElement = document.getElementById('feedback');
        const progressElement = document.getElementById('progress');
        const progressText = document.getElementById('progress-text');
        const resultTitle = document.getElementById('result-title');
        const resultMessage = document.getElementById('result-message');
        const resultIcon = document.getElementById('result-icon');
        const scoreElement = document.getElementById('score');
        const backToTopBtn = document.getElementById('back-to-top');

        // Start Quiz
        startQuizBtn.addEventListener('click', () => {
            quizIntro.classList.add('hidden');
            quizQuestions.classList.remove('hidden');
            loadQuestion();
        });

        // Load Question
        function loadQuestion() {
            const question = quizData[currentQuestion];
            questionElement.textContent = question.question;
            
            // Clear previous options
            optionsElement.innerHTML = '';
            
            // Add new options
            question.options.forEach((option, index) => {
                const button = document.createElement('button');
                button.classList.add('w-full', 'text-left', 'p-4', 'border', 'border-gray-300', 'rounded-lg', 'hover:bg-gray-100', 'transition');
                button.textContent = option;
                button.addEventListener('click', () => selectAnswer(index));
                optionsElement.appendChild(button);
            });
            
            // Update progress
            progressElement.style.width = `${(currentQuestion / quizData.length) * 100}%`;
            progressText.textContent = `${currentQuestion}/${quizData.length}`;
            
            // Hide next button and feedback
            nextBtn.classList.add('hidden');
            feedbackElement.classList.add('hidden');
        }

        // Select Answer
        function selectAnswer(selectedIndex) {
            const question = quizData[currentQuestion];
            const optionButtons = optionsElement.querySelectorAll('button');
            
            // Disable all buttons
            optionButtons.forEach(button => {
                button.disabled = true;
            });
            
            // Check if answer is correct
            if (selectedIndex === question.correct) {
                optionButtons[selectedIndex].classList.add('bg-green-100', 'border-green-500');
                feedbackElement.classList.remove('hidden');
                feedbackElement.classList.remove('bg-red-100', 'border-red-500', 'text-red-700');
                feedbackElement.classList.add('bg-green-100', 'border-green-500', 'text-green-700');
                feedbackElement.textContent = "Correto! " + question.explanation;
                score++;
            } else {
                optionButtons[selectedIndex].classList.add('bg-red-100', 'border-red-500');
                optionButtons[question.correct].classList.add('bg-green-100', 'border-green-500');
                feedbackElement.classList.remove('hidden');
                feedbackElement.classList.remove('bg-green-100', 'border-green-500', 'text-green-700');
                feedbackElement.classList.add('bg-red-100', 'border-red-500', 'text-red-700');
                feedbackElement.textContent = "Incorreto. " + question.explanation;
            }
            
            // Show next button if not last question
            if (currentQuestion < quizData.length - 1) {
                nextBtn.classList.remove('hidden');
            } else {
                nextBtn.classList.add('hidden');
                setTimeout(showResults, 1500);
            }
        }

        // Next Question
        nextBtn.addEventListener('click', () => {
            currentQuestion++;
            loadQuestion();
        });

        // Show Results
        function showResults() {
            quizQuestions.classList.add('hidden');
            quizResults.classList.remove('hidden');
            
            const percentage = Math.round((score / quizData.length) * 100);
            
            if (percentage >= 80) {
                resultTitle.textContent = "Excelente!";
                resultMessage.textContent = "Você demonstrou um ótimo conhecimento sobre segurança no trânsito!";
                resultIcon.classList.add('fa-check-circle', 'text-green-500');
            } else if (percentage >= 50) {
                resultTitle.textContent = "Bom trabalho!";
                resultMessage.textContent = "Você sabe bastante, mas ainda pode aprender mais sobre segurança no trânsito.";
                resultIcon.classList.add('fa-thumbs-up', 'text-blue-500');
            } else {
                resultTitle.textContent = "Pode melhorar!";
                resultMessage.textContent = "Recomendamos que você revise nossas dicas para aumentar seu conhecimento sobre segurança no trânsito.";
                resultIcon.classList.add('fa-exclamation-triangle', 'text-yellow-500');
            }
            
            scoreElement.textContent = `Você acertou ${score} de ${quizData.length} perguntas (${percentage}%)`;
        }

        // Restart Quiz
        restartQuizBtn.addEventListener('click', () => {
            currentQuestion = 0;
            score = 0;
            quizResults.classList.add('hidden');
            quizQuestions.classList.remove('hidden');
            loadQuestion();
        });

        // Back to Top Button
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTopBtn.classList.remove('hidden');
            } else {
                backToTopBtn.classList.add('hidden');
            }
        });

        backToTopBtn.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Mobile menu toggle (simplified for this example)
        document.querySelector('.md\\:hidden').addEventListener('click', () => {
            alert('Menu mobile seria implementado aqui em uma versão completa.');
        });
    </script>
</body>
</html>
